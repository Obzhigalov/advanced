.sections-bg-wrap__gradient {
  z-index: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(to right, rgba(28, 32, 36, 0.9) 0%, rgba(28, 32, 36, 0.7) 62%, rgba(27, 31, 34, 0) 100%);
  
  @include tablet {
    background-image: none;
    background-color: rgb(0%, 0%, 0%, 0.7);;
  }
}