.sections-bg-wrap {
  position: relative;
  background-image: url(‘~images/content/bg-wrap/autumn-bg.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  &::before {
    content: '';
    position: absolute;
    right: 0;
    top: -150px;
    width: 797px;
    height: 1404px;
    background-image: url(‘~images/content/bg-wrap/leafs.png);
    background-repeat: no-repeat;
    background-size: cover;
    
    @include tablet {
      top: 0;
    }
  }
}
