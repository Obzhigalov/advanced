.header {
  position: absolute;
  top: 0;
  z-index: 10;
  font-size: 16px;
  width: 100%;;
  font-weight: 400;
  color: $white;
  padding-top: 55px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header__nav {
  width: 70%;
  @include tablet {
    display: none;
  }
}
.header__burger {
  display: none;
  position: relative;
  width: 28px;
  height: 4px;
  background-color: $white;
    &::before {
      content: '';
      position: absolute;
      bottom: 8px;
      left: 0;
      width: 28px;
      height: 4px;
      background-color: $white;
        @include phone {
          bottom: 9px;
        }
    }
    &::after {
      content: '';
      position: absolute;
      top: 8px;
      left: 0;
      width: 28px;
      height: 4px;
      background-color: $white;
        @include phone {
          top: 9px;
        }
    }
    @include tablet {
      display: flex;
    }
}