.social {
  width: 15%;
  display: flex;
  justify-content: center;
}
.social__item {
  margin-left: 40px;
    &:first-child {
      margin-left: 0;
    }
}
.social__link {
  display: flex;
  align-items: center;
}
.social__svg {
  width: 25px;
  height: 25px;
  fill: #fff;
  transition: fill 0.2s;
    &:hover {
      fill: $orange;
      transition: fill 0.2s;
    }
}