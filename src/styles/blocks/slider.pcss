.slider-wrap {
  margin-top: 90px;
  width: 100%;
  display: flex;
  position: relative;
}
.slider {
  z-index: 5;
  position: relative;
  width: 66%;
  height: 550px;
}
.slider__preview {
  object-fit: cover;
  height: 100%;
}
.slider__list {
  position: absolute;
  right: 0;
  bottom: 60px;
  display: flex;
}
.slider__list-item {
  cursor: pointer;
  width: 178px;
  height: 100px;
  transition: filter 0.3s;
    &:hover {
      filter: saturate(300%);
      transition: filter 0.3s;
    }
}
.slider__list-item-pic {
  width: 100%;
  object-fit: cover;
}
.slider__list-item--active {
  border: 2px solid $orange;
}
.slider__switch-wrap {
  position: absolute;
  right: -50px;
  bottom: 60px;
}
.slider__switch {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  width: 50px;
  height: 50px;
  background-color: $dark-blue;
  transition: background-color 0.3s;
    &:hover {
      background-color: $darker-blue;
      transition: background-color 0.3s;
    }
}
.slider__switch:hover .slider__arrow-svg {
  fill: $orange;
  transition: fill 0.3s;
}
.slider__switch:hover .slider__arrow-svg--denied {
  fill: $grey;
}
.slider__arrow-svg {
  width: 10px;
  fill: $white;
  transition: fill 0.2s;
}
.slider__arrow-svg-prev {
  transform: rotate(180deg)
}
.slider__arrow-svg--denied {
  fill: $grey;
  transition: fill 0.3s;
}
