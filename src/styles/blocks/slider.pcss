.decription-wrap {
  position: relative;
  width: 34%;
  display: flex;
  &::before {
      content: '1';
      position: absolute;
      top: 0;
      left: -55px;
      z-index: 0;
      color: $lighter-gray;
      font-size: 400px;
      font-weight: 800;
      line-height: 473px;
    }
}
.description {
  margin-left: 132px;
}
.description__tags-list {
  display: flex;
  position: relative;
  z-index: 5;
}
.description__tags-list__item {
  background-color: $lighter-blue;
  margin-left: 15px;
  padding: 12px;
  font-size: 15px;
  font-weight: 400;
  color: $dark-grey;
  border-radius: 25px;
    &:first-child {
      margin-left: 0;
    }
}
.description__content {
  height: 295px;
  margin-top: 55px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.description__title {
  color: $dark-blue;
  font-size: 30px;
  font-weight: 700;
}
.description__info {
  color: $dark-blue;
  font-size: 16px;
  font-weight: 400;
}
.description__link {
  text-decoration: none;
  font-size: 18px;
  font-weight: 700;
  padding-left: 35px;
  position: relative;
  color: $blue;
  transition: color 0.5s;
    &:hover {
      color: $dark-blue;
      transition: color 0.5s;
    }
}
.description__link:hover .description__link-svg {
  fill: $dark-blue;
  transition: fill 0.4s;
}
.description__link-svg {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 15px;
  height: 15px;
  fill: $blue;
  transition: fill 0.4s;
}