.description-wrap {
  position: relative;
  width: 34%;
  display: flex;
  padding-left: 132px;
    @include small-desktop {
      padding-left: 100px;
    }
    @include tablet {
      width: 100%;
      padding-top: 64px;
      padding-left: 0;
      justify-content: center;
    }
    @include phone {
      justify-content: flex-start;
    }
}
.description {
    @include tablet {
      width: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    @include phone {
      width: 70%;
      align-items: flex-start;
      text-align: left;
      margin-left: 5%;
    }
}
.description__tags-list {
  display: flex;
  position: relative;
  z-index: 5;
}
.description__tags-list__item {
  background-color: $lighter-blue;
  margin-left: 15px;
  padding: 12px;
  font-size: 15px;
  font-weight: 400;
  color: $dark-grey;
  border-radius: 25px;
    &:first-child {
      margin-left: 0;
    }
}
.description__content {
  height: 295px;
  margin-top: 55px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
    @include small-desktop {
      height: 247px;
      margin-top: 115px;
    }
    @include tablet {
      margin-top: 20px;
      justify-content: flex-start;
      align-items: center;
    }
    @include phone {
      align-items: flex-start;
    }
}
.description__title {
  color: $dark-blue;
  font-size: 30px;
  font-weight: 700;
}
.description__info {
  color: $dark-blue;
  font-size: 16px;
  font-weight: 400;
    @include tablet {
      margin-top: 20px;
    }
}
.description__link {
  text-decoration: none;
  font-size: 18px;
  font-weight: 700;
  padding-left: 35px;
  position: relative;
  color: $blue;
  transition: color 0.5s;
    &:hover {
      color: $dark-blue;
      transition: color 0.5s;
    }
    @include tablet {
      width: 50%;
      padding-left: 15px;
      margin-top: 20px;
    }
    @include phone {
      padding-left: 20px;
    }
}
.description__link:hover .description__link-svg {
  fill: $dark-blue;
  transition: fill 0.4s;
}
.description__link-svg {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 15px;
  height: 15px;
  fill: $blue;
  transition: fill 0.4s;
}